{
	"expo": {
		"name": "Expo Minimum App",
		"slug": "expo-minimum-app",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "myapp",
		"userInterfaceStyle": "automatic",
		"splash": {
			"image": "./assets/images/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"ios": {
			"buildNumber": "1",
			"supportsTablet": true,
			"infoPlist": {
				"NSCameraUsageDescription": "Utilizamos a câmera para capturar imagens."
			},
			"bundleIdentifier": "expo.minimum.app"
		},
		"android": {
			"versionCode": 1,
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"permissions": ["android.permission.CAMERA"],
			"package": "expo.minimum.app"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			[
				"expo-build-properties",
				{
					"android": {
						"compileSdkVersion": 34,
						"targetSdkVersion": 34,
						"buildToolsVersion": "34.0.0",
						"usesCleartextTraffic": true,
						"enableProguardInReleaseBuilds": true,
						"enableShrinkResourcesInReleaseBuilds": true
					},
					"ios": {
						"deploymentTarget": "13.4",
						"ccacheEnabled": true
					}
				}
			],
			["expo-font"],
			["expo-router"],
			[
				"react-native-vision-camera",
				{
					"cameraPermissionText": "Utilizamos a câmera para capturar imagens."
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"router": {
				"origin": false
			}
		}
	}
}
